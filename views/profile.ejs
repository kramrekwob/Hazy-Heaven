<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
          </div>
          <div class="mt-5">
            <h2>Add a post</h2>
            <i class="fa fa-beer fa-2x"></i>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="batchSize" class="form-label">Batch Size</label>
                <input class="form-control" id="batchSize" name="batchSize">
              </div>
              <div class="mb-3"><label for="hopIngredients" class="hopIngredients">Hop Bill</label>
              <input type="text" class="form-control" name="hopIngredients">
              </div>
              <div class="mb-3"><label for="maltIngredients" class="maltIngredients">Fermentables</label><input type="text" class="form-control" name="maltIngredients">
              </div>
              <div class="mb-3">
                <label for="mashSchedule" class="form-control">Mash Schedule</label>
                <input type="text" class="form-control" name="mashSchedule">
              </div>
              <div class="mb-3">
                <label for="waterAdjustments" class="form-control">Water Adjustments</label>
                <input type="text" class="form-control" name="waterAdjustments">
              </div>
              <div class="mb3-">
                <label for="yeast" class="form-control">Yeast</label>
                <input type="text" class="form-control" name="yeast">
              </div>
              <div><label for="notes" class="form-control">Notes</label><input type="textArea" class="form-control" name="notes"></div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>